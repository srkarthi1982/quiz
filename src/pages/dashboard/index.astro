---
import LayoutFull from '../../app/LayoutFull.astro'
---

<LayoutFull active="dashboard">
  <div class="max-w-6xl mx-auto px-4 py-8">

    <!-- Profile Section -->
    <div class="bg-white rounded-lg shadow p-6 mb-8 flex flex-col sm:flex-row items-center sm:items-start gap-6">
		<i class="fas fa-user-circle text-8xl"></i>
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Welcome back, <span class="text-blue-600">Karthikeyan</span></h1>
        <p class="text-sm text-gray-500 mt-1">Your progress is amazing — keep going!</p>
        <div class="mt-2 text-sm text-gray-600">
          <p><i class="fas fa-envelope text-blue-500 mr-2"></i>karthikeyan@example.com</p>
          <p><i class="fas fa-calendar-check text-green-500 mr-2"></i>Member since: Jan 2025</p>
        </div>
      </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
        <h2 class="text-sm font-medium text-gray-500 uppercase">Quizzes Taken</h2>
        <p class="text-3xl font-bold text-gray-800 mt-2">12</p>
      </div>
      <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
        <h2 class="text-sm font-medium text-gray-500 uppercase">Average Score</h2>
        <p class="text-3xl font-bold text-gray-800 mt-2">84%</p>
      </div>
      <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
        <h2 class="text-sm font-medium text-gray-500 uppercase">Top Score</h2>
        <p class="text-3xl font-bold text-gray-800 mt-2">100%</p>
      </div>
    </div>

    <!-- Recent Results -->
    <div class="mt-10">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Recent Quizzes</h2>
      <div class="space-y-4">
        <div class="bg-white p-4 rounded-lg shadow border border-gray-100 flex justify-between items-center">
          <div>
            <h3 class="text-lg font-semibold text-gray-700">Mathematics — Algebra</h3>
            <p class="text-sm text-gray-500">Attempted on April 24, 2025</p>
          </div>
          <span class="bg-green-100 text-green-700 font-semibold px-4 py-1 rounded-full">92%</span>
        </div>
        <div class="bg-white p-4 rounded-lg shadow border border-gray-100 flex justify-between items-center">
          <div>
            <h3 class="text-lg font-semibold text-gray-700">General Knowledge</h3>
            <p class="text-sm text-gray-500">Attempted on April 20, 2025</p>
          </div>
          <span class="bg-yellow-100 text-yellow-700 font-semibold px-4 py-1 rounded-full">78%</span>
        </div>
        <div class="bg-white p-4 rounded-lg shadow border border-gray-100 flex justify-between items-center">
          <div>
            <h3 class="text-lg font-semibold text-gray-700">Physics — Mechanics</h3>
            <p class="text-sm text-gray-500">Attempted on April 12, 2025</p>
          </div>
          <span class="bg-red-100 text-red-700 font-semibold px-4 py-1 rounded-full">61%</span>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-10 text-center">
      <a href="/quiz" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-blue-700 transition">
        Start a New Quiz
      </a>
    </div>

  </div>
</LayoutFull>


