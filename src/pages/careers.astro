---
import LayoutFull from "../app/Layout.astro";
---
<LayoutFull active="careers">
	<div class="flex flex-col gap-2 w-full text-center">
		<div class="title">Join Our Team</div>
		<div class="text">Be a part of something greate.</div>
	</div>
	<div class="spacer"></div>
	<div class="card w-full">
		<form class="grid grid-cols-1 sm:grid-cols-2 gap-4" @submit.prevent="$store.careers.onSave()">
			<div class="col-span-1">
				<label for="name"  class="label">Full Name</label>
				<input type="text" class="input w-full mt-1" id="name" name="name" x-model="$store.careers.item.name" placeholder="Jhon Doe" required />
			</div>
			<div class="col-span-1">
				<label for="email" class="label">Email</label>
				<input type="email" class="input w-full mt-1" id="email" name="email" x-model="$store.careers.item.email" placeholder="name@email.com" required />
			</div>
			<div class="col-span-1">
				<label for="phone" class="label">Contact</label>
				<input type="text" class="input w-full mt-1" id="phone" name="phone" x-model="$store.careers.item.phone" placeholder="+971 123456789" required />
			</div>
			<div class="col-span-1">
				<label for="join_as" class="label">Join As</label>
				<input type="text" class="input w-full mt-1" id="join_as" name="join_as" x-model="$store.careers.item.join_as" placeholder="Student or Teacher" required />
			</div>
			<div class="col-span-2">
				<label for="address" class="label">Address</label>
				<input type="text" class="input w-full mt-1" id="address" name="address" x-model="$store.careers.item.address" placeholder="123, Street, State, Country" required />
			</div>
			<div class="col-span-2">
				<label for="detail" class="label">Details</label>
				<textarea class="input w-full mt-1" rows="3" id="detail" name="detail" x-model="$store.careers.item.detail" placeholder="Your message" required></textarea>
			</div>
			<div class="col-span-2">
				<label for="file" class="label">CV File</label>
				<input type="file" class="input w-full mt-1" id="file" name="file" x-model="$store.careers.item.file" required />
			</div>
			<button type="submit" class="btn-primary w-fit" title="Submit">Submit</button>
		</form>
	</div>
</LayoutFull>