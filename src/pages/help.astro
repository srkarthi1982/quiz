---
import { AvBreadcrumb, AvButton, AvCard, AvContainer } from "@ansiversa/components";
import AppShell from "../layouts/AppShell.astro";

const title = "Help – Quiz";
const description = "Learn how to start quizzes and track your results.";
---

<AppShell title={title} description={description}>
  <section class="av-faq-public__crumb">
    <AvContainer>
      <AvBreadcrumb items={[{ label: "Home", href: "/" }, { label: "Help" }]} />
    </AvContainer>
  </section>

  <section class="av-section">
    <AvContainer>
      <div class="av-auth-stack-lg">
        <AvCard className="av-auth-stack-md">
          <div>
            <p class="av-kicker">Quiz</p>
            <h1 class="av-section-title">Help</h1>
            <p class="av-text-soft">
              Quiz helps you practice with structured roadmaps, timed questions, and clear results.
            </p>
          </div>
          <div class="av-row-wrap">
            <AvButton href="/quiz">Start a quiz</AvButton>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">How to start</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Choose platform, subject, topic, and roadmap.</p>
              <p class="av-text-soft">• Pick a level and start the quiz.</p>
              <p class="av-text-soft">• Review results and retry for improvement.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Key features</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Roadmap-based practice flow.</p>
              <p class="av-text-soft">• Results history and review modal.</p>
              <p class="av-text-soft">• Clear difficulty progression.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Free vs Pro</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• Free: Easy and Medium levels.</p>
              <p class="av-text-soft">• Pro: Difficult level unlocked.</p>
            </div>
          </div>
        </AvCard>

        <AvCard variant="soft" className="av-auth-stack-md">
          <div class="av-auth-stack-sm">
            <h2 class="av-card-heading">Troubleshooting</h2>
            <div class="av-auth-stack-xs">
              <p class="av-text-soft">• If results look off, retry the quiz to refresh.</p>
              <p class="av-text-soft">• Ensure you are signed in to save results.</p>
            </div>
          </div>
        </AvCard>
      </div>
    </AvContainer>
  </section>
</AppShell>
