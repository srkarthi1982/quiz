---
import LayoutSidebar from '../../../../app/LayoutFull.astro';
import Drawer from "../../../../component/Drawer.astro";
import Pagination from "../../../../component/Pagination.astro";
import Sorting from "../../../../component/Sorting.astro";
import Breadcrumb from '../../../../component/Breadcrumb.astro';
import ActionButton from '../../../../component/ActionButton.astro';
import FilterCheckbox from "../../../../component/FilterCheckbox.astro";
import FilterSearch from '../../../../component/FilterSearch.astro';
import Form from "./form.astro";
const { accessCodes } = Astro.locals;
const hasManage = accessCodes?.includes('001.03.02.01');
---
<LayoutSidebar active="states">
	<Breadcrumb list={[{ name: "Management", link: "management" },{ name: "States", link: "" }]}>
		<div class="flex flex-row gap-3">
			<Sorting storeName="states" columns="columns" />
			<button class="btn-icon white lg" x-on:click="$store.states.onInit(window.location)"><i class="fas fa-sync-alt"></i></button>
			<button class="btn-icon active lg" x-on:click="$store.states.onInsert()"><i class="fas fa-plus"></i></button>
		</div>
	</Breadcrumb>
	<div class="table-responsive paper">
		<table class="table border strip">
			<thead>
				<tr>
					<th x-show={`${hasManage}`}></th>
					<th class="w-full">Name</th>
					<th>Country</th>
					<th>Active</th>
				</tr>
				<tr>
					<th x-show={`${hasManage}`}></th>
					<th><FilterSearch storeName="states" ref="searchName" method="search" column="name" placeholder="Name"/></th>
					<th class=" min-w-36">
						<label for="country" class="sr-only">Filter by Country</label>
						<select 
							id="country"
							class="input w-full" 
							:value="$store.states.filters.country_id"
							@change="$store.states.onColumnListChange('country_id', Number($el.value))">
							<option value="">All</option>
							<template x-for={`i in $store.states.column.countries`}>
								<option :value="i.id" x-text="i.name"></option>
							</template>
						</select>
					</th>
					<th><FilterCheckbox storeName="states" column="is_active"/></th>
				</tr>
			</thead>
			<tbody x-show="$store.states.items.length > 0">
				<template x-for="r in $store.states.items" :key="r.id">
					<tr>
						<td x-show={`${hasManage}`} class="flex justify-center">
							<ActionButton position="bottom" show={`r.showAction`} 
								actions={[
									{ label: 'Edit', click: `$store.states.onEdit(r)`, show: hasManage },
									{ label: 'Delete', click: `$store.states.onDelete(r)`, show: hasManage },
									{ label: 'Copy ID', click: `$store.states.copyId(r.id)`, show: hasManage }
								]} 
							/>
						</td>
						<td x-text="r.name"></td>
						<td x-text="r.country_name"></td>						
						 <td class="text-center">
							<i :class="`fas ${r.is_active ? 'fa-check text-green-500' : 'fa-times text-red-500'}`"></i>
						 </td>
					</tr> 
				</template>    
			</tbody>
		</table>
	</div>
	<div class="spacer"></div>
	<Pagination storeName="states" />
	<Drawer item="$store.states.item" title="State" showDrawer="$store.states.showDrawer">
		<Form item="$store.states.item" hasManage={hasManage} />
	</Drawer>
</LayoutSidebar>
