---
import LayoutSidebar from '../../../../app/LayoutFull.astro';
import Drawer from "../../../../component/Drawer.astro";
import Pagination from "../../../../component/Pagination.astro";
import Sorting from "../../../../component/Sorting.astro";
import Breadcrumb from '../../../../component/Breadcrumb.astro';
import ActionButton from '../../../../component/ActionButton.astro';
import FilterCheckbox from "../../../../component/FilterCheckbox.astro";
import FilterSearch from '../../../../component/FilterSearch.astro';
import Form from "./form.astro";
import Avatar from '../../../../component/Avatar.astro';
const { accessCodes } = Astro.locals;
const hasManage = accessCodes?.includes('001.04.02.01');
---
<LayoutSidebar active="tailoring">
	<Breadcrumb list={[{ name: "Management", link: "management" },{ name: "Tailoring", link: "" }]}>
		<div class="flex flex-row gap-3">
			<Sorting storeName="tailoring" columns="columns" />
			<button class="btn-icon white lg" x-on:click="$store.tailoring.onInit(window.location)"><i class="fas fa-sync-alt"></i></button>
			<button class="btn-icon active lg" x-on:click="$store.tailoring.onInsert()"><i class="fas fa-plus"></i></button>
		</div>
	</Breadcrumb>
	<div class="table-responsive paper">
		<table class="table border strip">
			<thead>
				<tr>
					<th x-show={`${hasManage}`}></th>
					<th>Image</th>
					<th class="w-full">Name</th>
					<th>Price</th>
					<th>Active</th>
				</tr>
				<tr>
					<th x-show={`${hasManage}`}></th>
					<th></th>
					<th><FilterSearch storeName="tailoring" ref="searchName" method="search" column="name" placeholder="Name"/></th>
					<th></th>
					<th><FilterCheckbox storeName="tailoring" column="is_active"/></th>
				</tr>
			</thead>
			<tbody x-show="$store.tailoring.items.length > 0">
				<template x-for="r in $store.tailoring.items" :key="r.id">
					<tr>
						<td x-show={`${hasManage}`} class="flex justify-center">
							<ActionButton position="bottom" show={`r.showAction`} 
								actions={[
									{ label: 'Edit', click: `$store.tailoring.onEdit(r)`, show: hasManage },
									{ label: 'Delete', click: `$store.tailoring.onDelete(r)`, show: hasManage },
									{ label: 'Copy ID', click: `$store.tailoring.copyId(r.id)`, show: hasManage }
								]} 
							/>
						</td>
						<td><Avatar id="r.id" name="r.name" image="r.image ? `${source}${r.image}` : blank" folder="tailoring" style="sm hover rounded-full"/></td>
						<td x-text="r.name"></td>
						<td x-text="r.price" class="text-center"></td>
						<td class="text-center">
							<i :class="`fas ${r.is_active ? 'fa-check text-green-500' : 'fa-times text-red-500'}`"></i>
						</td>
					</tr> 
				</template>    
			</tbody>
		</table>
	</div>
	<div class="spacer"></div>
	<Pagination storeName="tailoring" />
	<Drawer item="$store.tailoring.item" title="Tailoring" showDrawer="$store.tailoring.showDrawer">
		<Form item="$store.tailoring.item" hasManage={hasManage} />
	</Drawer>
</LayoutSidebar>
