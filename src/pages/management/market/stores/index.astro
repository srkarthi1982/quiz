---
import LayoutSidebar from '../../../../app/LayoutFull.astro';
import Drawer from "../../../../component/Drawer.astro";
import Pagination from "../../../../component/Pagination.astro";
import Sorting from "../../../../component/Sorting.astro";
import Breadcrumb from '../../../../component/Breadcrumb.astro';
import ActionButton from '../../../../component/ActionButton.astro';
import FilterSearch from '../../../../component/FilterSearch.astro';
import FilterCheckbox from '../../../../component/FilterCheckbox.astro';
import Avatar from '../../../../component/Avatar.astro';
import Form from "./form.astro";
const { accessCodes } = Astro.locals;
const hasManage = accessCodes?.includes('001.02.09.01');
---
<LayoutSidebar active="stores">
	<Breadcrumb list={[{ name: "Management", link: "management" },{ name: "Stores", link: "" }]}>
		<div class="flex flex-row gap-3">
			<Sorting storeName="stores" columns="columns" />
			<button class="btn-icon white lg" x-on:click="$store.stores.onInit(window.location)"><i class="fas fa-sync-alt"></i></button>
		</div>
	</Breadcrumb>
	<div class="table-responsive paper">
		<table class="table border strip">
			<thead>
				<tr>
					<th class="w-12" x-show={`${hasManage}`}></th>
					<th>Verified</th>
					<th>Active</th>
					<th>Image</th>
					<th>Store Name</th>
					<th>User Name</th>
					<th>Email</th>
					<th>Phone</th>
					<th>Package</th>
					<th>Country</th>
					<th>State</th>
					<th>City</th>
					<th>Ads</th>
					<th>Views</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
				</tr>
				<tr>
					<th x-show={`${hasManage}`}></th>
					<th><FilterCheckbox storeName="stores" column="is_verified"/></th>
					<th><FilterCheckbox storeName="stores" column="is_active"/></th>
					<th></th>
					<th><FilterSearch storeName="stores" ref="searchName" method="search" column="name" placeholder="Store Name"/></th>
					<th><FilterSearch storeName="stores" ref="searchUserName" method="search" column="user_name" placeholder="User Name"/></th>
					<th><FilterSearch storeName="stores" ref="searchEmail" method="search" column="email" placeholder="Email"/></th>
					<th><FilterSearch storeName="stores" ref="searchPhone" method="search" column="phone" placeholder="Phone"/></th>
					<th class=" min-w-36">
						<label for="package" class="sr-only">Filter by Package</label>
						<select 
							id="package"
							class="input w-full" 
							:value="$store.stores.filters.package_id"
							@change="$store.stores.onColumnListChange('package_id', Number($el.value))">
							<option value="">All</option>
							<template x-for={`i in $store.stores.column.packages`}>
								<option :value="i.id" x-text="i.name"></option>
							</template>
						</select>
					</th>
					<th class=" min-w-36">
						<label for="country" class="sr-only">Filter by Country</label>
						<select 
							id="country"
							class="input w-full" 
							:value="$store.stores.filters.country_id"
							@change="$store.stores.onColumnCountryChange(Number($el.value))">
							<option value="">All</option>
							<template x-for={`i in $store.stores.column.countries`}>
								<option :value="i.id" x-text="i.name"></option>
							</template>
						</select>
					</th>
					<th class=" min-w-36">
						<label for="state" class="sr-only">Filter by State</label>
						<select 
							id="state"
							class="input w-full" 
							:value="$store.stores.filters.state_id"
							@change="$store.stores.onColumnStateChange(Number($el.value))">
							<option value="">All</option>
							<template x-for={`i in $store.stores.column.states`}>
								<option :value="i.id" x-text="i.name"></option>
							</template>
						</select>
					</th>
					<th class=" min-w-36">
						<label for="city" class="sr-only">Filter by City</label>
						<select 
							id="city"
							class="input w-full" 
							:value="$store.stores.filters.city_id"
							@change="$store.stores.onColumnListChange('city_id', Number($el.value))">
							<option value="">All</option>
							<template x-for={`i in $store.stores.column.cities`}>
								<option :value="i.id" x-text="i.name"></option>
							</template>
						</select>
					</th>
					<th></th>
					<th></th>
					<th class="text-center">
						<label for="created_at" class="sr-only">Filter by Created At</label>
						<input id="created_at" type="date" @change="$store.stores.onColumnListChange('created_at', $el.value)" class="input w-32">
					</th>
					<th class="text-center">
						<label for="updated_at" class="sr-only">Filter by Updated At</label>
						<input id="updated_at" type="date" @change="$store.stores.onColumnListChange('updated_at', $el.value)" class="input w-32">
					</th>
				</tr>
			</thead>
			<tbody x-show="$store.stores.items.length > 0">
				<template x-for="r in $store.stores.items" :key="r.id">
					<tr>
						<td x-show={`${hasManage}`} class="flex justify-center">
							<ActionButton position="bottom" show={`r.showAction`} 
								actions={[
									{ label: 'Edit', click: `$store.stores.onEdit(r)`, show: hasManage },
									{ label: 'Copy ID', click: `$store.stores.copyId(r.id)`, show: hasManage }
								]} 
							/>
						</td>
						<td class="text-center">
							<i :class="`fas ${r.is_verified ? 'fa-check text-green-500' : 'fa-times text-red-500'}`"></i>
						</td>
						<td class="text-center">
							<i :class="`fas ${r.is_active ? 'fa-check text-green-500' : 'fa-times text-red-500'}`"></i>
						</td>
						<td><Avatar id="r.id" name="r.name" image="r.image ? `${source}${r.image}` : blank" folder="stores" style="sm hover rounded-full"/></td>
						<td x-text="r.name"></td>
						<td x-text="r.user_name"></td>
						<td x-text="r.email"></td>
						<td x-text="r.phone"></td>
						<td x-text="r.package_name"></td>
						<td x-text="r.country_name"></td>
						<td x-text="r.state_name"></td>
						<td x-text="r.city_name"></td>
						<td class="text-center" x-text="r.ads_count"></td>
						<td class="text-center" x-text="r.views_count"></td>
						<td class="text-center" x-text="$store.stores.ddmmyyyy(r.created_at)"></td>
						<td class="text-center" x-text="$store.stores.ddmmyyyy(r.updated_at)"></td>
					</tr> 
				</template>    
			</tbody>
		</table>
	</div>
	<div class="spacer"></div>
	<Pagination storeName="stores" />
	<Drawer item="$store.stores.item" title="Store" showDrawer="$store.stores.showDrawer">
		<Form item="$store.stores.item" hasManage={hasManage} />
	</Drawer>
</LayoutSidebar>
