---
import LayoutSidebar from '../../../../app/LayoutFull.astro';
import Drawer from "../../../../component/Drawer.astro";
import Pagination from "../../../../component/Pagination.astro";
import Sorting from "../../../../component/Sorting.astro";
import Breadcrumb from '../../../../component/Breadcrumb.astro';
import ActionButton from '../../../../component/ActionButton.astro';
import FilterCheckbox from "../../../../component/FilterCheckbox.astro";
import FilterSearch from '../../../../component/FilterSearch.astro';
import Avatar from '../../../../component/Avatar.astro';
import Form from "./form.astro";
const { accessCodes } = Astro.locals;
const hasManage = accessCodes?.includes('001.02.07.01');
---
<LayoutSidebar active="subservices">
	<Breadcrumb list={[{ name: "Management", link: "management" },{ name: "Sub Services", link: "" }]}>
		<div class="flex flex-row gap-3">
			<Sorting storeName="subservices" columns="columns" />
			<button class="btn-icon white lg" x-on:click="$store.subservices.onInit(window.location)"><i class="fas fa-sync-alt"></i></button>
			<button x-show={`${hasManage}`} class="btn-icon active lg" x-on:click="$store.subservices.onInsert()"><i class="fas fa-plus"></i></button>
		</div>
	</Breadcrumb>
	<div class="table-responsive paper">
		<table class="table border strip">
			<thead>
				<tr>
					<th x-show={`${hasManage}`}></th>
					<th>Image</th>
					<th class="w-full">Name</th>
					<th>Service</th>
					<th>Ads</th>
					<th>Active</th>
				</tr>
				<tr>
					<th x-show={`${hasManage}`}></th>
					<th></th>
					<th><FilterSearch storeName="subservices" ref="searchName" method="search" column="name" placeholder="Name"/></th>
					<th class=" min-w-36">
						<select 
							class="input w-full" 
							:value={`$store.subservices.filters.service_id`}
							@change="$store.subservices.onColumnListChange('service_id', Number($el.value))">
							<option value="">All</option>
							<template x-for={`i in $store.subservices.column.services`}>
								<option :value="i.id" x-text="i.name"></option>
							</template>
						</select>
					</th>
					<th></th>
					<th><FilterCheckbox storeName="subservices" column="is_active"/></th>
				</tr>
			</thead>
			<tbody x-show="$store.subservices.items.length > 0">
				<template x-for="r in $store.subservices.items" :key="r.id">
					<tr>
						<td x-show={`${hasManage}`} class="flex justify-center">
							<ActionButton position="bottom" show={`r.showAction`} 
								actions={[
									{ label: 'Edit', click: `$store.subservices.onEdit(r)`, show: hasManage },
									{ label: 'Delete', click: `$store.subservices.onDelete(r)`, show: hasManage },
									{ label: 'Copy ID', click: `$store.subservices.copyId(r.id)`, show: hasManage }
								]} 
							/>
						</td>
						<td><Avatar id="r.id" name="r.name" image="r.image ? `${source}${r.image}` : blank" folder="subservices" style="sm hover rounded-full"/></td>
						<td x-text="r.name"></td>
						<td x-text="r.service_name"></td>	
						<td class="text-center" x-text="r.counts"></td>					
						<td class="text-center">
							<i :class="`fas ${r.is_active ? 'fa-check text-green-500' : 'fa-times text-red-500'}`"></i>
						</td>
					</tr> 
				</template>    
			</tbody>
		</table>
	</div>
	<div class="spacer"></div>
	<Pagination storeName="subservices" />
	<Drawer item="$store.subservices.item" title="SubService" showDrawer="$store.subservices.showDrawer">
		<Form item="$store.subservices.item" hasManage={hasManage} />
	</Drawer>
</LayoutSidebar>
