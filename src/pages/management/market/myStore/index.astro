---
import LayoutSidebar from "../../../../app/LayoutFull.astro";
import Breadcrumb from "../../../../component/Breadcrumb.astro";
const { storeId } = Astro.locals;
---
<LayoutSidebar active="myStore">
    <Breadcrumb list={[{ name: "management", link: "management" },{ name: 'My Store', link: '' }]} />
	<form class="card" x-data x-init={`$store.store.getStore('${storeId}')`} @submit.prevent="$store.store.onSave()">
		<div class="flex flex-row justify-between items-center">
			<div class="title whitespace-nowrap">Store Details</div>
			<div class="flex flex-col items-center">
				<div class="flex flex-row gap-2 items-center">
					<input id="is_active" name="is_active" x-model="$store.store.item.is_active" type="checkbox" class="checkbox" class="checkbox" />
					<label for="is_active" class="label cursor-pointer">Store Activation</label>
				</div>
				<div class="txt gray" x-show="$store.store.item.is_active">Your Store is Public</div>
			</div>
		</div>
		<div class="divider my-3"></div>
		<div class="flex flex-col gap-3">
			<div class="flex flex-col sm:flex-row gap-3">
				<div class="w-full">
					<label for="file" class="label">Store Logo</label>
					<input type="text" id="file" name="file" x-model="$store.store.item.image" class="input w-full mt-1" placeholder="Image url" />
				</div>
				<div class="w-full">
					<label for="name" class="label">Store Name</label>
					<input type="text" id="name" name="name" x-model="$store.store.item.name" class="input w-full mt-1" placeholder="Store Name" required>
				</div>
			</div>
			<div class="flex flex-col sm:flex-row gap-3">
				<div class="w-full">
					<label for="tagline" class="label">Tagline</label>
					<input type="text" id="tagline" name="tagline" x-model="$store.store.item.tagline" class="input w-full mt-1" placeholder="Tagline">
				</div>
				<div class="w-full">
					<label for="address" class="label">Address</label>
					<input type="text" id="address" name="address" x-model="$store.store.item.address" class="input w-full mt-1" placeholder="Address">
				</div>
			</div>
			<div class="flex flex-col sm:flex-row gap-3">
				<div class="w-full">
					<label for="location" class="label">Location</label>
					<input type="text" id="location" name="location" x-model="$store.store.item.location" class="input w-full mt-1" placeholder="Location">
				</div>
				<div class="w-full">
					<label for="timings" class="label">Timings</label>
					<input type="text" id="timings" name="timings" x-model="$store.store.item.timings" class="input w-full mt-1" placeholder="Timings">
				</div>
			</div>
			<div class="w-full">
				<label for="about" class="label">About</label>
				<textarea id="about" name="about" x-model="$store.store.item.about" class="input w-full mt-1" placeholder="About"></textarea>
			</div>
		</div>
		<div class="divider my-4"></div>
		<div class="flex flex-col md:flex-row gap-4 justify-between items-center">
			<div class="txt gray">Created Date: <span x-text="$store.store.item.created_at"></span></div>
			<div class="flex flex-row gap-4">
				<a href={`/store?id=${storeId}`} class="btn-default" type="button" title="Visit Store">Visit Store</a>
				<button class="btn-primary" type="submit" title="Update">Update</button>
			</div>
		</div>
	</form>
	<div class="spacer"></div>
	<div class="card">
		<div class="flex flex-row justify-between items-center">
			<div class="title whitespace-nowrap">Membership Package</div>
			<a href="/membership" class="btn-default">Updated Package</a>
		</div>
		<div class="divider my-3"></div>
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-6 gap-y-3">
			<div class="flex justify-between items-center border-b pb-3">
				<div class="text">Current Package</div>
				<div class="text-primary" x-text="$store.store.item.package_name"></div>
			</div>
			<div class="flex justify-between items-center border-b pb-3">
				<div class="text">Ads Limit</div>
				<div class="text-primary"><span x-text="$store.store.item.ad_limit"></span> Ads</div>
			</div>
			<div class="flex justify-between items-center border-b pb-3">
				<div class="text">Feature Ads Limit</div>
				<div class="text-primary"><span x-text="$store.store.item.feature_limit"></span> Ads</div>
			</div>
			<div class="flex justify-between items-center border-b pb-3">
				<div class="text">Ads Validity</div>
				<div class="text-primary"><span x-text="$store.store.item.ad_validity"></span> Days</div>
			</div>
			<div class="flex justify-between items-center border-b pb-3">
				<div class="text">Package Validity</div>
				<div class="text-primary"><span x-text="$store.store.item.package_validity"></span> Days</div>
			</div>
			<div class="flex justify-between items-center border-b pb-3">
				<div class="text">Package Expiry</div>
				<div class="text-primary">?</div>
			</div>
			<div class="flex justify-between items-center border-b pb-3">
				<div class="text">Posted Ads</div>
				<div class="text-primary">? of <span x-text="$store.store.item.ad_limit"></span> Ads</div>
			</div>
			<div class="flex justify-between items-center border-b pb-3">
				<div class="text">Featured Ads</div>
				<div class="text-primary">? of <span x-text="$store.store.item.feature_limit"></span> Ads</div>
			</div>
		</div>		
	</div>
</LayoutSidebar>