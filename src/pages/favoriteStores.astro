---
import Layout from "../app/Layout.astro";
import Pagination from "../component/Pagination.astro";
import StoreCard from "../component/StoreCard.astro";
import { url } from '../lib/data.js'
---
<Layout active="favorites">
	<div class="flex flex-col sm:flex-row justify-between items-center gap-3">
        <div class="title"><i class="fas fa-heart mr-2"></i>Favorite Stores (1)</div>
        <div class="flex gap-4 justify-center input-group">
			<a href={url("favoriteAds")} class="btn-default first" title="Favorite Ads">Favorite Ads</a>
			<a href={url("favoriteStores")} class="btn-primary last" title="Favorite Stores">Favorite Stores</a>
		</div>
    </div>
    <div class="divider mt-5"></div>
	<div class="spacer"></div>
	<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-5 lg:gap-7">
		<template x-for="i in $store.stores.items" :key="i.id">
			<StoreCard
				name="i.name"
				is_verified="i.is_verified"
				count="i.ads_count"
				url="`/store?id=${i.id}`"
				image="i.image ? `${source}${i.image}` : blank"
			/>
		</template>
	</div>
	<div class="spacer"></div>
	<Pagination storeName="stores" />
</Layout>
